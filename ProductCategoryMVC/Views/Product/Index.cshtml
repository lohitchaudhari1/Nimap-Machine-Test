@model ProductPaginationViewModel

<h2>Products</h2>

<table class="table">
    <thead>
    <tr>
        <th>ProductId</th>
        <th>Product Name</th>
        <th>CategoryId</th>
        <th>Category Name</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model.Products)
    {
    <tr>
        <td>@product.ProductId</td> <!-- Displaying ProductId -->
        <td>@product.ProductName</td>
        <td>@product.CategoryId</td> <!-- Displaying CategoryId -->
        <td>@product.Category.CategoryName</td> <!-- Displaying Category Name -->
    </tr>
    }
    </tbody>
</table>

<!-- Pagination controls -->
<div>
    @if (Model.CurrentPage > 1)
    {
    <a href="@Url.Action("Index", "Product", new { page = Model.CurrentPage - 1 })">Previous</a>
    }

    @for (var i = 1; i <= Model.TotalPages; i++)
    {
    <a href="@Url.Action("Index", "Product", new { page = i })" class="@(i == Model.CurrentPage ? "active" : "")">@i</a>
    }

    @if (Model.CurrentPage < Model.TotalPages)
    {
    <a href="@Url.Action("Index", "Product", new { page = Model.CurrentPage + 1 })">Next</a>
    }
</div>
