@model IEnumerable<ProductCategoryMVC.Models.Category>

<h2>Categories</h2>
<table class="table">
    <thead>
    <tr>
        <th>Category Name</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.CategoryName</td>
            <td>
                <a href="@Url.Action("Edit", "Category", new { id = category.CategoryId })">Edit</a> |
                <a href="@Url.Action("Delete", "Category", new { id = category.CategoryId })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>